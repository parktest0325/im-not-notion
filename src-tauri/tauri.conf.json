{
  "$schema": "https://schema.tauri.app/config/2",
  "identifier": "dev.dongkim.imnotnotion",
  "productName": "im-not-notion",
  "version": "0.2.2",

  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5573",
    "frontendDist": "../dist"
  },

  "app": {
    "security": { "csp": null },
    "windows": [
      {
         "title": "im not notion", "width": 1024, "height": 768,
         "dragDropEnabled": false
      }
    ]
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/nottion.ico"]
  }
}
